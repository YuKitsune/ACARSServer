@page
@model ACARSServer.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h2 class="card-title">Welcome to ACARS Server</h2>
        <p class="card-text">A real-time ACARS message relay server for flight simulation networks.</p>

        <h3 class="mt-4">Quick Links</h3>
        <div class="row mt-3">
            <div class="col-md-6 mb-3">
                <a href="/ApiKeys/Request" class="btn btn-primary btn-lg w-100">Request API Key</a>
                <p class="text-muted mt-2 small">Generate an API key to connect your controller to the server</p>
            </div>
            <div class="col-md-6 mb-3">
                <a href="/Stats" class="btn btn-success btn-lg w-100">View Statistics</a>
                <p class="text-muted mt-2 small">View real-time server statistics and active connections</p>
            </div>
        </div>
        
        <h3 class="mt-4">Plugin Information</h3>
        <ul>
            <li>vatSys Plugin: <a href="https://github.com/YuKitsune/ACARSPlugin">ACARS Plugin</a></li>
        </ul>

        <h3 class="mt-4">API Information</h3>
        <p><strong>Controller Hub Endpoint:</strong> <code>/hubs/controller</code></p>

        <h5 class="mt-3">Required Header:</h5>
        <ul>
            <li><code>X-ACARS-ApiKey</code> - Your API key</li>
        </ul>

        <h5 class="mt-3">Query Parameters:</h5>
        <ul>
            <li><code>network</code> - Flight simulation network (e.g., VATSIM, IVAO)</li>
            <li><code>stationId</code> - Your station identifier (e.g., EGGX, KUSA, YBBB)</li>
            <li><code>callsign</code> - Your callsign (e.g., LON_C_CTR, BN-TSN_FSS)</li>
        </ul>
    </div>
</div>
