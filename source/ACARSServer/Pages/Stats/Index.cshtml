@page
@model ACARSServer.Pages.Stats.IndexModel
@{
    ViewData["Title"] = "Server Statistics";
    ViewData["BodyClass"] = "stats-page";
}

<div class="card shadow-sm">
    <div class="card-body">
        <h2 class="card-title">Server Statistics</h2>
        <p class="card-text">Real-time statistics for the ACARS Server</p>

        <div class="row g-3 mt-3">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="stat-label">Total Connections</div>
                        <div class="stat-value" id="totalConnections">0</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="stat-label">Networks</div>
                        <div class="stat-value" id="totalNetworks">0</div>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <div class="stat-label">Stations</div>
                        <div class="stat-value" id="totalStations">0</div>
                    </div>
                </div>
            </div>
        </div>

        <h3 class="mt-4">Active Connections</h3>
        <div id="connectionsContainer">
            <p class="text-muted">Loading connections...</p>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/microsoft-signalr/8.0.0/signalr.min.js"></script>
    <script>
        const connection = new signalR.HubConnectionBuilder()
            .withUrl("/hubs/public-stats")
            .withAutomaticReconnect()
            .build();

        connection.on("UpdateStatistics", (stats) => {
            console.log("Received stats update:", stats);
            updateStatistics(stats);
        });

        connection.start()
            .then(() => {
                console.log("Connected to statistics hub");
            })
            .catch(err => {
                console.error("Error connecting to statistics hub:", err);
                document.getElementById("connectionsContainer").innerHTML =
                    '<p class="text-danger">Error connecting to server. Please refresh the page.</p>';
            });

        function updateStatistics(stats) {
            // Update summary stats
            document.getElementById("totalConnections").textContent = stats.totalConnections;
            document.getElementById("totalNetworks").textContent = stats.uniqueNetworks;
            document.getElementById("totalStations").textContent = stats.uniqueStations;

            // Update connections table
            const container = document.getElementById("connectionsContainer");

            if (stats.connections.length === 0) {
                container.innerHTML = '<p class="text-muted">No active connections</p>';
                return;
            }

            let html = '<div class="table-responsive"><table class="table table-striped table-hover mt-3">';
            html += '<thead class="table-light"><tr>';
            html += '<th>Network</th>';
            html += '<th>Station ID</th>';
            html += '<th>Callsign</th>';
            html += '<th>VATSIM CID</th>';
            html += '</tr></thead><tbody>';

            stats.connections.forEach(conn => {
                html += '<tr>';
                html += `<td>${escapeHtml(conn.network)}</td>`;
                html += `<td>${escapeHtml(conn.stationId)}</td>`;
                html += `<td>${escapeHtml(conn.callsign)}</td>`;
                html += `<td>${escapeHtml(conn.vatsimCid)}</td>`;
                html += '</tr>';
            });

            html += '</tbody></table></div>';
            container.innerHTML = html;
        }

        function escapeHtml(text) {
            const div = document.createElement('div');
            div.textContent = text;
            return div.innerHTML;
        }
    </script>
}
